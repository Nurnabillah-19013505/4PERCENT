<!DOCTYPE html>
@{
    Layout = null;
}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous">
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $("#ZPBtn").on("change", function () {
            $("#check7").attr('checked', 'checked');

        });

    });

</script>

<style>
    h4 {
        font-size: 25px;
        font-family: "Lucida Bright",monospace;
    }

    label {
        font-size: 20px;
        font-family: "Lucinfa Bright", monospace;
    }

    body {
        background-color: lightsalmon;
    }
</style>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous">
</script>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $("#ZPBtn").on("change", function () {
            $("#check7").attr('checked', 'checked');

        });

    });

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
    </style>
</head>
<body>
    <center>
        <div class="container">
            <form method="post" action="/Mission/Mission7Posting" enctype="multipart/form-data">
                <div class="form-group row">
                    <input type="checkbox" id="check7" name="Misson7" class="cm-toggle">
                    <div class="offset-sm-2 col-sm-6">
                        <h4>Plan a Zoom catch-up with friends and post a picture of it!</h4>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-sm-2" for="ZoomPicture"> Post Your Picture </label>
                    <div class="col-sm-6">
                        <input type="file" name="ZoomPicture" id="ZPBtn" class="form-control" />
                    </div>
                </div>


                @if (ViewData["ZoomPicture"] != null)
                {
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-6">
                            <span><img src="~/Photo/@ViewData["ZoomPicture"]" width="500" height="400" /></span>
                        </div>
                    </div>
                }

                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-6">
                        <input type="submit" value="Submit" id="ZP" class="btn btn-primary" />
                    </div>
                </div>

                @if (ViewData["Message"] != null)
                {
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-6">
                            <w>
                                <div class="alert alert-@ViewData["MsgType"]">
                                    <text>@Html.Raw(ViewData["Message"])</text>
                                </div>
                            </w>

                        </div>
                    </div>
                }


            </form>
        </div>
    </center>
</body>
</html>